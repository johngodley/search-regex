{
	"name": "search-regex",
	"version": "3.3.0",
	"description": "Adds search and replace functionality across posts, pages, comments, and meta-data, with full regular expression support",
	"main": "search-regex.php",
	"sideEffects": [
		"*.css",
		"*.scss",
		"**/*.css",
		"**/*.scss"
	],
	"scripts": {
		"build": "wp-scripts build",
		"build:analyze": "ANALYZE=true pnpm build",
		"build:stats": "wp-scripts build --webpack-bundle-analyzer",
		"lint": "pnpm lint:css && pnpm lint:js && pnpm lint:ts && pnpm lint:php",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:ts": "tsc --noEmit",
		"lint:php": "composer run-script checks",
		"plugin-zip": "pnpm build && rm -rf release && mkdir -p release && wp-scripts plugin-zip && mv search-regex.zip release",
		"release": "pnpm plugin-zip && release-it",
		"release:svn": "pnpm plugin-zip && cd release && unzip search-regex.zip && cd .. && rm release/search-regex.zip && dev/svn.sh $npm_package_version",
		"start": "wp-scripts start",
		"test": "pnpm test:php && pnpm test:js && pnpm test:integration",
		"test:integration": "wp-env run cli --env-cwd=wp-content/plugins/search-regex composer run test-integration",
		"test:js": "wp-scripts test-unit-js",
		"test:php": "composer run-script test",
		"doc": "redocly build-docs dev/openapi.yaml -o release/api-doc.html",
		"update": "pnpm update",
		"wp-env:start": "wp-env start",
		"wp-env:destroy": "wp-env destroy"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/johngodley/search-regex.git"
	},
	"author": "John Godley",
	"license": "GPL-3.0",
	"bugs": {
		"url": "https://github.com/johngodley/search-regex/issues"
	},
	"homepage": "https://github.com/johngodley/search-regex",
	"devDependencies": {
		"@tanstack/eslint-plugin-query": "^5.91.2",
		"@types/jest": "^30.0.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/react-highlight-words": "^0.20.0",
		"@wordpress/base-styles": "^6.12.0",
		"@wordpress/env": "^10.36.0",
		"@wordpress/eslint-plugin": "^22.22.0",
		"@wordpress/prettier-config": "^4.36.0",
		"@wordpress/scripts": "^30.27.0",
		"@wordpress/stylelint-config": "^23.28.0",
		"download": "^8.0.0",
		"eslint": "^8.57.1",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-jsdoc": "^61.5.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"lint-staged": "^16.2.7",
		"npm-check-updates": "^19.2.0",
		"path": "^0.12.7",
		"prettier": "npm:wp-prettier@3.0.3",
		"@redocly/cli": "^1.0.0",
		"release-it": "^19.1.0",
		"request": "^2.88.2",
		"stylelint": "^16.26.1",
		"typescript": "^5.9.3",
		"webpack-bundle-analyzer": "^5.1.0",
		"webpack-shell-plugin-next": "^2.3.3"
	},
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@headlessui/react": "^2.2.9",
		"@internationalized/date": "^3.10.1",
		"@tanstack/react-query": "^5.90.12",
		"@tanstack/react-query-devtools": "^5.91.1",
		"@wordpress/element": "^6.36.0",
		"@wordpress/i18n": "^6.9.0",
		"clsx": "^2.1.1",
		"file-saver": "^2.0.5",
		"rc-progress": "^4.0.0",
		"rc-util": "^5.44.4",
		"react": "^18.3.1",
		"react-copy-to-clipboard": "^5.1.0",
		"react-day-picker": "^8.10.1",
		"react-delta": "^1.1.2",
		"react-dom": "^18.3.1",
		"react-focus-lock": "^2.13.7",
		"react-highlight-words": "^0.21.0",
		"react-popper": "^2.3.0",
		"react-textarea-autosize": "^8.5.9",
		"use-debounce": "^10.0.6",
		"zod": "^4.2.1",
		"zustand": "^5.0.9"
	},
	"wordpress": {
		"supported": "6.5"
	},
	"release-it": {
		"github": {
			"release": true,
			"assets": [
				"release/search-regex.zip"
			]
		},
		"npm": false
	},
	"lint-staged": {
		"*.php": [
			"composer lint",
			"composer format"
		],
		"*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{css,scss}": [
			"prettier --write"
		]
	}
}
